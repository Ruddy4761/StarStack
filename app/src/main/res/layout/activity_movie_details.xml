<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_background">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/dark_background"
            app:titleTextColor="@color/dark_text_primary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Movie Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Poster -->
                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:background="@color/dark_card"
                    android:src="@drawable/ic_launcher_foreground"/>

                <!-- Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movie Title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_text_primary"/>

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024"
                        android:textSize="14sp"
                        android:textColor="@color/dark_text_secondary"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvDirector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Director"
                        android:textSize="14sp"
                        android:textColor="@color/dark_text_secondary"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120 min"
                        android:textSize="14sp"
                        android:textColor="@color/dark_text_secondary"
                        android:layout_marginTop="4dp"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:transformPivotX="0dp"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_accent"/>

                        <TextView
                            android:id="@+id/tvReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0 reviews)"
                            android:textSize="12sp"
                            android:textColor="@color/dark_text_secondary"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Genres -->
            <TextView
                android:id="@+id/tvGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action • Thriller • Drama"
                android:textSize="14sp"
                android:textColor="@color/dark_accent"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnWatchlist"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="+ Add to Watchlist"
                    android:textSize="12sp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.TonalButton"/>

                <Button
                    android:id="@+id/btnRate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Rate Movie"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.TonalButton"/>

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text_primary"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie description goes here..."
                android:textSize="14sp"
                android:textColor="@color/dark_text_secondary"
                android:lineSpacingExtra="4dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

            <!-- Cast -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cast"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text_primary"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tvCast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actor 1, Actor 2, Actor 3"
                android:textSize="14sp"
                android:textColor="@color/dark_text_secondary"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

            <!-- Reviews Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reviews"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_text_primary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvNoReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No reviews yet. Be the first to review!"
                android:textSize="14sp"
                android:textColor="@color/dark_text_secondary"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="80dp"
                android:clipToPadding="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@android:color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>