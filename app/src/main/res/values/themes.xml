<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.StarStack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_accent</item>
        <item name="colorPrimaryVariant">@color/dark_accent</item>
        <item name="colorOnPrimary">@color/dark_text_primary</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/dark_background</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Card background -->
        <item name="cardViewStyle">@style/Widget.StarStack.CardView</item>
    </style>

    <style name="Widget.StarStack.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_card</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>
